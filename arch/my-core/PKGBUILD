pkgname=my-core
pkgver=2
pkgrel=4
pkgdesc="Core console tools and basic system config"
arch=(any)
url="https://github.com/wh1tevs/dots"
license=('MIT')
install=${pkgname}.install
source=(
  10-home-network.conf
  10-dns-systemd-resolved.conf
)
sha256sums=('SKIP' 'SKIP')
depends=(
  base-devel
  curl
  git
  gnupg
  man
  man-db
  neovim
  networkmanager
  openssh
  systemd
  stow
  tmux
  zsh
  zsh-completions

  jq
  fd
  ripgrep
  fzf
)

package() {
  install -Dm644 "${srcdir}/10-home-network.conf" \
    "${pkgdir}/etc/systemd/resolved.conf.d/10-home-network.conf"
  install -Dm644 "${srcdir}/10-dns-systemd-resolved.conf" \
    "${pkgdir}/etc/NetworkManager/conf.d/10-dns-systemd-resolved.conf"
}

# vim: :ft=bash
