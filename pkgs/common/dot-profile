_profile_common="$HOME/.profile.common"
_profile_override="$HOME/.profile.override"
_profile_machine_override="$HOME/.profile.machine.override"
_profile_machine="$HOME/.profile.machine"
_profile_local="$HOME/.profile.local"

if [ -f "$_profile_override" ]; then
  . "$_profile_override"
  return
fi

if [ -f "$_profile_machine_override" ]; then
  . "$_profile_machine_override"
  return
fi

if [ -f "$_profile_common" ]; then
  . "$_profile_common"
fi

if [ -f "$_profile_machine" ]; then
  . "$_profile_machine"
fi

if [ -f "$_profile_local" ]; then
  . "$_profile_local"
fi

# vim: ft=sh
